{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/*.css",
      "!**/*.d.ts",
      "!**/*.astro",
      "!**/dist/**/*",
      "!**/build/**/*",
      "!**/.next/**/*",
      "!apps/cli/test/fixtures/**/*",
      "!**/worker-configuration.d.ts",
      "!**/token-cache.json",
      "!**/.wrangler/**/*",
      "!**/.astro/**/*",
      "!**/test-results/**/*",
      "!**/.turbo/**/*",
      "!**/.vscode/**/*",
      "!**/playwright/.cache/**/*"
    ],
    "maxSize": 10485760
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  }
}
