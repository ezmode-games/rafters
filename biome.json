{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "ignore": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/.open-next",
      "**/.wrangler",
      "**/worker-configuration.d.ts",
      "**/.react-router",
      "**/*.css",
      "**/*.d.ts",
      "apps/cli/test/fixtures/**/*",
      "apps/cli/test/fixtures/**/*.json",
      "apps/cli/test/fixtures/**/*.ts",
      "apps/cli/test/fixtures/**/*.tsx",
      "apps/cli/test/fixtures/**/*.js",
      "apps/cli/test/fixtures/**/*.jsx"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  }
}
