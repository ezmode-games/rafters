{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/*.css",
      "**/*.d.ts",
      "apps/cli/test/fixtures/**/*",
      "**/worker-configuration.d.ts",
      "**/token-cache.json",
      "**/.wrangler/**/*",
      "**/.astro/**/*",
      "**/test-results/**/*"
    ],
    "maxSize": 10485760
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  }
}
