{
  "name": "rafters",
  "version": "0.1.1",
  "description": "AI-first design intelligence system for systematic UI generation",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:affected": "turbo build --filter='...[main]'",
    "test": "turbo test",
    "test:affected": "turbo test:run --filter='...[main]'",
    "biome:check": "pnpm biome check --fix --unsafe",
    "typecheck": "turbo typecheck type-check",
    "typecheck:affected": "turbo typecheck type-check --filter='...[main]'",
    "preflight": "pnpm biome:check && turbo build typecheck test:preflight --concurrency=4 && pnpm changeset:ensure",
    "preflight:affected": "pnpm biome:check && turbo build typecheck test:preflight --filter='...[main]' --concurrency=4 && pnpm changeset:ensure",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:check": "changeset status --verbose",
    "changeset:ensure": "pnpm changeset status --verbose || pnpm changeset add --empty",
    "deploy:api": "pnpm --filter api deploy",
    "workspace:update": "pnpm update -r",
    "workspace:outdated": "pnpm outdated -r",
    "workspace:audit": "pnpm audit --recursive",
    "coverage": "turbo coverage",
    "ui:dev": "pnpm --filter @rafters/ui storybook",
    "studio:dev": "pnpm --filter @rafters/studio dev"
  },
  "keywords": [
    "design-system",
    "ai-intelligence",
    "accessibility-first",
    "semantic-tokens",
    "react-components",
    "oklch",
    "design-reasoning"
  ],
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "lefthook": "^1.12.3",
    "turbo": "^2.3.3",
    "typescript": "catalog:"
  },
  "dependencies": {
    "tsx": "^4.20.5"
  }
}
