{
  "name": "rafters",
  "version": "0.1.1",
  "description": "AI-first design intelligence system for systematic UI generation",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive --sort build",
    "test": "pnpm --recursive test",
    "test:run": "pnpm --recursive test:run",
    "biome:lint": "pnpm --recursive lint",
    "biome:format": "pnpm --recursive format",
    "biome:check": "pnpm biome check --fix --unsafe",
    "typecheck": "pnpm --recursive type-check",
    "preflight": "pnpm biome:check && pnpm build && pnpm typecheck && pnpm test:run",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "ui:storybook": "pnpm --filter @rafters/ui storybook",
    "ui:build-storybook": "pnpm --filter @rafters/ui build-storybook",
    "studio:dev": "pnpm --filter @rafters/studio dev",
    "changeset": "changeset",
    "changeset:autogenerate": "node .changesets/changesets-autogenerate.mjs",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "changeset:check": "changeset status --verbose",
    "manifest:generate": "pnpm --filter website generate:manifest",
    "release:dry": "pnpm changeset:version && pnpm build && pnpm manifest:generate",
    "release:local": "pnpm preflight && pnpm changeset:publish",
    "deploy:storybook": "pnpm ui:build-storybook",
    "deploy:registry": "pnpm manifest:generate"
  },
  "keywords": [
    "design-system",
    "ai-intelligence",
    "accessibility-first",
    "semantic-tokens",
    "react-components",
    "oklch",
    "design-reasoning"
  ],
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.29.5",
    "lefthook": "^1.11.13",
    "typescript": "catalog:"
  },
  "dependencies": {
    "tsx": "^4.20.5"
  }
}
