{
  "name": "rafters",
  "version": "0.1.0",
  "description": "React components built with design master intelligence",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test-storybook": "vitest run --project=storybook",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "validate:design": "node scripts/validate-design-system.js"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "accessibility",
    "design-intelligence",
    "semantic-first",
    "cognitive-load"
  ],
  "author": "Sean Poulter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seanpoulter/rafters"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@chromatic-com/storybook": "^4.0.1",
    "@mdx-js/react": "^3.1.0",
    "@storybook/addon-a11y": "^9.0.12",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-onboarding": "^9.0.12",
    "@storybook/addon-vitest": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@tailwindcss/vite": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.1",
    "@vitest/browser": "3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.2",
    "glob": "^11.0.2",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.13",
    "markdown-to-jsx": "^7.7.8",
    "memfs": "^4.17.2",
    "playwright": "^1.52.0",
    "remark-gfm": "^4.0.1",
    "storybook": "^9.0.12",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
