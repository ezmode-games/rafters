{
  "name": "rafters-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.25.0"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:component": "pnpm -r test:component",
    "test:e2e": "pnpm -r test:e2e",
    "test:a11y": "playwright test --grep @a11y",
    "test:quick": "pnpm test:unit && pnpm test:component",
    "test:all": "pnpm preflight && pnpm test:e2e",
    "test:watch": "pnpm -r test:unit --watch",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "preflight": "pnpm typecheck && pnpm lint && pnpm test:unit && pnpm test:a11y && pnpm build",
    "ci": "pnpm test:all",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm --filter=rafters build && changeset publish"
  },
  "devDependencies": {
    "@axe-core/playwright": "catalog:",
    "@biomejs/biome": "catalog:",
    "@changesets/cli": "catalog:",
    "@cloudflare/vitest-pool-workers": "catalog:",
    "@playwright/experimental-ct-react": "catalog:",
    "@playwright/test": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "happy-dom": "catalog:",
    "lefthook": "catalog:",
    "msw": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zocker": "catalog:",
    "zod": "catalog:"
  }
}
