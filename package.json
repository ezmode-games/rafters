{
  "name": "@rafters/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Rafters - Design intelligence system for AI agents",
  "type": "module",
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "// ===== MONOREPO TESTING ORCHESTRATION =====": "",
    "test": "turbo test",
    "test:unit": "vitest run --workspace",
    "test:integration": "vitest run --workspace --config vitest.workspace.ts --project integration",
    "test:component": "vitest run --workspace --config vitest.workspace.ts --project component",
    "test:e2e": "turbo test:e2e",
    "// Advanced Testing Commands": "",
    "test:watch": "vitest --workspace --config vitest.workspace.ts",
    "test:coverage": "vitest run --workspace --coverage",
    "test:coverage:unit": "vitest run --workspace --coverage --project unit",
    "test:coverage:integration": "vitest run --workspace --coverage --project integration",
    "test:ui": "vitest --workspace --ui",
    "test:reporter": "vitest run --workspace --reporter=verbose --reporter=json --outputFile=test-results/results.json",
    "// Performance Testing": "",
    "test:benchmark": "vitest bench --workspace",
    "// CI/CD Testing Commands": "",
    "test:ci": "vitest run --workspace --coverage --reporter=junit --reporter=github-actions",
    "test:ci:sharded": "vitest run --workspace --shard=${SHARD_INDEX:-1}/${SHARD_COUNT:-1}",
    "test:ci:parallel": "vitest run --workspace --pool=threads --poolOptions.threads.maxThreads=${MAX_THREADS:-4}",
    "// Future-Ready Commands": "",
    "test:ai-insights": "node scripts/ai-test-analyzer.mjs",
    "test:distributed": "node scripts/distributed-test-coordinator.mjs",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "check": "turbo check",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "preflight": "turbo preflight",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.27.10",
    "@cloudflare/vitest-pool-workers": "^0.8.68",
    "@faker-js/faker": "^10.0.0",
    "@types/apca-w3": "^0.1.3",
    "@types/node": "^22.0.0",
    "apca-w3": "catalog:",
    "lefthook": "^1.9.6",
    "msw": "^2.11.5",
    "tsx": "^4.20.5",
    "turbo": "^2.3.4",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "wrangler": "^4.34.0",
    "zocker": "^3.0.0",
    "zod": "catalog:"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": []
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": ">=19.0.0",
        "react-dom": ">=19.0.0"
      }
    },
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0"
    },
    "onlyBuiltDependencies": [
      "@cloudflare/workerd-darwin-64",
      "@cloudflare/workerd-linux-64",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "lefthook",
      "sharp",
      "workerd"
    ]
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}
