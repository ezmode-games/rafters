{
  "name": "rafters",
  "version": "0.1.0",
  "description": "AI-first design intelligence system for systematic UI generation",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:run": "pnpm --recursive test:run",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "ui:dev": "pnpm --filter @rafters/ui dev",
    "ui:storybook": "pnpm --filter @rafters/ui storybook",
    "ui:build-storybook": "pnpm --filter @rafters/ui build-storybook",
    "cli:dev": "pnpm --filter @rafters/cli dev",
    "studio:dev": "pnpm --filter @rafters/studio dev"
  },
  "keywords": [
    "design-system",
    "ai-intelligence",
    "accessibility-first",
    "semantic-tokens",
    "react-components",
    "oklch",
    "design-reasoning"
  ],
  "author": "Sean Poulter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seanpoulter/rafters"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "lefthook": "^1.11.13",
    "typescript": "^5.5.2"
  }
}
