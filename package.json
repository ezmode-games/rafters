{
  "name": "rafters",
  "version": "0.1.1",
  "description": "AI-first design intelligence system for systematic UI generation",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:affected": "turbo build --filter='...[origin/main]'",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "test:preflight": "turbo test:preflight",
    "test:affected": "turbo test:run --filter='...[origin/main]'",
    "biome:lint": "pnpm --recursive lint",
    "biome:format": "pnpm --recursive format",
    "biome:check": "pnpm biome check --fix --unsafe",
    "typecheck": "turbo typecheck type-check",
    "typecheck:affected": "turbo typecheck type-check --filter='...[main]'",
    "preflight": "pnpm biome:check && turbo build typecheck test:preflight --concurrency=4 && pnpm changeset:ensure",
    "preflight:affected": "pnpm biome:check && turbo build typecheck test:preflight --filter='...[main]' --concurrency=4 && pnpm changeset:ensure",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "ui:storybook": "pnpm --filter @rafters/ui storybook",
    "ui:build-storybook": "pnpm --filter @rafters/ui build-storybook",
    "studio:dev": "pnpm --filter @rafters/studio dev",
    "changeset": "changeset",
    "changeset:autogenerate": "node .changeset/changesets-autogenerate.mjs",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "changeset:check": "changeset status --verbose",
    "changeset:ensure": "pnpm changeset status --verbose || pnpm changeset add --empty",
    "manifest:generate": "pnpm --filter website generate:manifest",
    "release:dry": "pnpm changeset:version && pnpm build && pnpm manifest:generate",
    "release:local": "pnpm preflight && pnpm changeset:publish",
    "deploy:storybook": "pnpm ui:build-storybook",
    "deploy:registry": "pnpm manifest:generate"
  },
  "keywords": [
    "design-system",
    "ai-intelligence",
    "accessibility-first",
    "semantic-tokens",
    "react-components",
    "oklch",
    "design-reasoning"
  ],
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "lefthook": "^1.12.3",
    "turbo": "^2.3.3",
    "typescript": "catalog:"
  },
  "dependencies": {
    "tsx": "^4.20.5"
  }
}
