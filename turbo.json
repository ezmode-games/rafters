{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "out/**"
      ],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "VITE_*", "PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false,
      "interactive": true,
      "env": ["NODE_ENV", "CI"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false,
      "interactive": true,
      "env": ["NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "interactive": true,
      "env": ["NODE_ENV", "CI", "BASE_URL"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["tsconfig.tsbuildinfo"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "check": {
      "dependsOn": ["typecheck", "lint"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "preflight": {
      "dependsOn": ["typecheck", "lint", "test", "test:integration"],
      "outputs": [],
      "cache": false
    }
  }
}