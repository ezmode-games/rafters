{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "out/**"],
      "inputs": ["src/**", "build.config.*", "package.json"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "VITE_*", "PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test": {
      "dependsOn": ["^typecheck"],
      "outputs": ["coverage/**", "test-results/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "test:unit": {
      "dependsOn": ["^typecheck"],
      "outputs": ["coverage/unit/**", "test-results/**"],
      "cache": true,
      "env": ["NODE_ENV", "CI"]
    },
    "test:integration": {
      "dependsOn": ["^typecheck"],
      "outputs": ["coverage/integration/**", "test-results/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI", "RAFTERS_INTEL"]
    },
    "test:component": {
      "dependsOn": ["^typecheck"],
      "outputs": ["playwright-report-components/**", "test-results/**", "coverage/component/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "interactive": true,
      "env": ["NODE_ENV", "CI", "BASE_URL"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test:coverage": {
      "dependsOn": ["^typecheck"],
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["NODE_ENV", "CI"]
    },
    "test:benchmark": {
      "dependsOn": ["^typecheck"],
      "outputs": ["benchmark-results/**"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["tsconfig.tsbuildinfo", "dist/.tsbuildinfo"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "check": {
      "dependsOn": ["typecheck", "lint"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "preflight": {
      "dependsOn": [
        "build",
        "typecheck",
        "lint",
        "test:unit",
        "test:integration",
        "test:component"
      ],
      "outputs": ["test-results/**", "coverage/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "deploy": {
      "dependsOn": ["build", "preflight"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV", "CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
    },
    "deploy:preview": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV", "CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
    },
    "publish": {
      "dependsOn": ["build", "preflight"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV", "NPM_TOKEN"]
    }
  }
}
