{
  "name": "@rafters/cli",
  "version": "0.1.1",
  "description": "AI-first design intelligence CLI for generating semantic design tokens and components",
  "type": "module",
  "private": false,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "rafters": "./dist/bin.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "test": "pnpm build && vitest run",
    "test:unit": "pnpm build && vitest run",
    "test:integration": "pnpm build && vitest run test/integration/",
    "test:watch": "vitest",
    "test:preflight": "pnpm build && vitest run",
    "lint": "biome check --fix .",
    "format": "biome format --write",
    "typecheck": "echo 'Skipping typecheck - using unbuild for building'",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/inquirer": "^9.0.7",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "unbuild": "^3.6.1",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@rafters/design-tokens": "workspace:*",
    "@rafters/shared": "workspace:*",
    "chalk": "^5.3.0",
    "clsx": "catalog:",
    "commander": "^12.1.0",
    "execa": "^9.5.1",
    "fs-extra": "catalog:",
    "inquirer": "^12.1.0",
    "ora": "^8.1.0",
    "tailwind-merge": "catalog:",
    "zod": "catalog:"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "ai",
    "cli",
    "semantic-tokens",
    "accessibility",
    "design-intelligence"
  ],
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "apps/cli"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
