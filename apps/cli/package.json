{
  "name": "@rafters/cli",
  "version": "0.1.0",
  "description": "CLI tool for installing AI-first design system components with embedded intelligence",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rafters": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "rafters",
    "cli",
    "ai-design-system",
    "design-intelligence",
    "react-components",
    "semantic-tokens"
  ],
  "author": "Sean Poulter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seanpoulter/rafters",
    "directory": "apps/cli"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.5.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.1.0",
    "ora": "^8.1.0",
    "playwright": "^1.54.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.0",
    "typescript": "^5.5.2",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}