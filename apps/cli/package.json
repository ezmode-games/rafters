{
  "name": "rafters",
  "version": "0.2.0",
  "description": "CLI tool for installing AI-first design system components with embedded intelligence",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rafters": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "templates", "README.md"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "rafters",
    "cli",
    "ai-design-system",
    "design-intelligence",
    "react-components",
    "semantic-tokens"
  ],
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "apps/cli"
  },
  "dependencies": {
    "@rafters/shared": "workspace:*",
    "@rafters/design-tokens": "workspace:*",
    "chalk": "^5.3.0",
    "clsx": "catalog:",
    "commander": "^12.1.0",
    "execa": "^9.5.1",
    "fs-extra": "catalog:",
    "inquirer": "^12.1.0",
    "ora": "^8.1.0",
    "playwright": "^1.54.1",
    "tailwind-merge": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/fs-extra": "catalog:",
    "@types/inquirer": "^9.0.7",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
