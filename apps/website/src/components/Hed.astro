---

const _links = [
  { href: '/docs', label: 'Docs' },
  { href: '/components', label: 'Components' },
  { href: '/blog', label: 'Blog' },
  { href: 'https://github.com/real-handy/rafters', label: 'GitHub' },
];
---

<header class="w-7xl md:w-8xl lg:2-9xl bg-card text-foreground shadow-sm rounded-b-md border-b border-border mb-8">
  <div class="mx-auto px-4 flex h-16 items-center justify-between">
    <div class="h-16">
      <!-- Logo -->
      <a href="/" class="mx-auto">
        <img src="/logo.svg" alt="Rafters" class="w-20 h-auto fill-current" />
      </a>
    </div>
    <div class="flex items-center gap-8">
      <!-- Navigation Links -->
      <nav class="flex items-center gap-6">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {link.label}
          </a>
        ))}
        <button class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 h-8 px-3 transition-colors">
          Login
        </button>
      </nav>
    </div>
  </div>
</header>
