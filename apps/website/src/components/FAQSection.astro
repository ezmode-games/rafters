---
const { title = 'Frequently Asked Questions', description, class: className = '' } = Astro.props;
---

<section class={`faq-section max-w-4xl mx-auto ${className}`}>
  {title && (
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">{title}</h2>
      {description && (
        <p class="text-lg text-gray-600">{description}</p>
      )}
    </div>
  )}

  <div class="faq-list space-y-2">
    <slot />
  </div>
</section>

<style>
  .faq-section {
    margin: 2rem 0;
  }

  .faq-list {
    background: white;
    overflow: hidden;
  }
</style>