---
interface Prop {
  name: string;
  type: string;
  default?: string;
  description?: string;
  required?: boolean;
}

interface Props {
  props: Prop[];
  title?: string;
}

const { props, title = 'Props' } = Astro.props;
---

<div class="my-8">
  <h3 class="font-mono text-xs font-medium uppercase tracking-wider text-gray-500 mb-4 pb-2 border-b border-gray-200">
    {title}
  </h3>
  <div class="overflow-x-auto border border-gray-200 rounded-md">
    <table class="w-full text-sm border-collapse">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="font-mono text-xs font-semibold uppercase tracking-wide text-gray-500 text-left px-4 py-3">Prop</th>
          <th class="font-mono text-xs font-semibold uppercase tracking-wide text-gray-500 text-left px-4 py-3">Type</th>
          <th class="font-mono text-xs font-semibold uppercase tracking-wide text-gray-500 text-left px-4 py-3">Default</th>
          <th class="font-mono text-xs font-semibold uppercase tracking-wide text-gray-500 text-left px-4 py-3">Description</th>
        </tr>
      </thead>
      <tbody>
        {props.map((prop, i) => (
          <tr class={i < props.length - 1 ? 'border-b border-gray-100' : ''}>
            <td class="px-4 py-3 align-top font-medium">
              <code class="bg-transparent p-0 text-gray-900 text-sm">{prop.name}</code>
              {prop.required && <span class="text-red-500 ml-1">*</span>}
            </td>
            <td class="px-4 py-3 align-top">
              <code class="bg-gray-100 px-1.5 py-0.5 rounded text-purple-600 text-xs">{prop.type}</code>
            </td>
            <td class="px-4 py-3 align-top">
              {prop.default ? (
                <code class="bg-gray-100 px-1.5 py-0.5 rounded text-green-600 text-xs">{prop.default}</code>
              ) : (
                <span class="text-gray-300">—</span>
              )}
            </td>
            <td class="px-4 py-3 align-top text-gray-600 leading-relaxed">
              {prop.description || <span class="text-gray-300">—</span>}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>
