---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Rafters Design System',
  description = 'AI-driven component library with embedded design intelligence',
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Google Fonts - IBM Plex Sans & Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'IBM Plex Sans', system-ui, sans-serif;
    --font-mono: 'IBM Plex Mono', 'Courier New', monospace;
  }
  
  body {
    font-family: var(--font-sans);
    font-weight: 300; /* Light weight */
    line-height: 1.6;
    color: #1f2937;
    background-color: #ffffff;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-mono);
    font-weight: 400; /* Regular weight for mono */
    line-height: 1.2;
    color: #111827;
  }
  
  /* Article styling for Container component */
  article h1, article h2, article h3, article h4, article h5, article h6 {
    font-family: var(--font-mono);
    font-weight: 400;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  article h1 {
    font-size: 2.25rem;
    margin-top: 0;
  }
  
  article h2 {
    font-size: 1.875rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }
  
  article h3 {
    font-size: 1.5rem;
  }
  
  article p {
    font-family: var(--font-sans);
    font-weight: 300;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  article ul, article ol {
    font-family: var(--font-sans);
    font-weight: 300;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  article blockquote {
    font-family: var(--font-sans);
    font-weight: 300;
    font-style: italic;
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
  }
  
  article code {
    font-family: var(--font-mono);
    font-weight: 400;
    font-size: 0.875rem;
    background-color: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }
  
  article pre {
    font-family: var(--font-mono);
    font-weight: 400;
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    overflow-x: auto;
  }
  
  article pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  /* Custom Layout & Spacing Utilities */
  
  /* Width utilities */
  .w-full { width: 100%; }
  .w-32 { width: 8rem; } /* 128px */
  
  /* Container width utilities - these set max-width and center */
  .w-7xl { max-width: 80rem; margin-left: auto; margin-right: auto; } /* 1280px */
  
  /* Max-width utilities */
  .max-w-sm { max-width: 24rem; }
  .max-w-md { max-width: 28rem; }
  .max-w-lg { max-width: 32rem; }
  .max-w-xl { max-width: 36rem; }
  .max-w-2xl { max-width: 42rem; }
  .max-w-3xl { max-width: 48rem; }
  .max-w-4xl { max-width: 56rem; }
  .max-w-5xl { max-width: 64rem; }
  .max-w-6xl { max-width: 72rem; }
  .max-w-7xl { max-width: 80rem; }
  
  /* Height utilities */
  .h-auto { height: auto; }
  .min-h-screen { min-height: 100vh; }
  
  /* Margin utilities */
  .mx-auto { margin-left: auto; margin-right: auto; }
  .mb-2 { margin-bottom: 0.5rem; }
  .mb-3 { margin-bottom: 0.75rem; }
  .mb-4 { margin-bottom: 1rem; }
  .mb-6 { margin-bottom: 1.5rem; }
  .mb-8 { margin-bottom: 2rem; }
  .mb-12 { margin-bottom: 3rem; }
  .mb-16 { margin-bottom: 4rem; }
  .mt-16 { margin-top: 4rem; }
  .mt-24 { margin-top: 6rem; }
  
  /* Padding utilities */
  .p-3 { padding: 0.75rem; }
  .p-4 { padding: 1rem; }
  .p-8 { padding: 2rem; }
  .px-4 { padding-left: 1rem; padding-right: 1rem; }
  .py-3 { padding-top: 0.75rem; padding-bottom: 0.75rem; }
  .pt-8 { padding-top: 2rem; }
  .pb-16 { padding-bottom: 4rem; }
  .pr-4 { padding-right: 1rem; }
  
  /* Flexbox utilities */
  .flex { display: flex; }
  .flex-col { flex-direction: column; }
  .flex-row { flex-direction: row; }
  .flex-1 { flex: 1 1 0%; }
  .items-center { align-items: center; }
  .justify-center { justify-content: center; }
  .justify-between { justify-content: space-between; }
  
  /* Gap utilities */
  .gap-4 { gap: 1rem; }
  .gap-6 { gap: 1.5rem; }
  .gap-8 { gap: 2rem; }
  
  /* Grid utilities */
  .grid { display: grid; }
  .space-y-2 > * + * { margin-top: 0.5rem; }
  .space-y-6 > * + * { margin-top: 1.5rem; }
  
  /* Text utilities */
  .text-sm { font-size: 0.875rem; line-height: 1.25rem; }
  .text-base { font-size: 1rem; line-height: 1.5rem; }
  .text-lg { font-size: 1.125rem; line-height: 1.75rem; }
  .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
  .text-2xl { font-size: 1.5rem; line-height: 2rem; }
  .text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
  
  .font-sans { font-family: var(--font-sans); }
  .font-mono { font-family: var(--font-mono); }
  .font-medium { font-weight: 500; }
  .font-semibold { font-weight: 600; }
  
  .leading-3 { line-height: 0.75rem; }
  .leading-relaxed { line-height: 1.625; }
  .tracking-wide { letter-spacing: 0.025em; }
  
  /* Color utilities */
  .text-gray-600 { color: #4b5563; }
  .text-gray-100 { color: #f3f4f6; }
  .bg-gray-50 { background-color: #f9fafb; }
  .bg-gray-900 { background-color: #111827; }
  .border-gray-200 { border-color: #e5e7eb; }
  
  /* Border utilities */
  .border { border-width: 1px; }
  .border-t { border-top-width: 1px; }
  .border-b { border-bottom-width: 1px; }
  .rounded { border-radius: 0.25rem; }
  .rounded-lg { border-radius: 0.5rem; }
  
  /* Misc utilities */
  .block { display: block; }
  .inline-flex { display: inline-flex; }
  .opacity-80 { opacity: 0.8; }
  .underline { text-decoration: underline; }
  .text-left { text-align: left; }
  .italic { font-style: italic; }
  .transition-shadow { transition-property: box-shadow; transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); transition-duration: 150ms; }
  
  /* Hover utilities */
  .hover\:no-underline:hover { text-decoration: none; }
  
  /* Display utilities */
  .hidden { display: none; }
  .inline { display: inline; }
  .inline-block { display: inline-block; }

  /* Position utilities */
  .relative { position: relative; }
  .absolute { position: absolute; }
  .fixed { position: fixed; }

  /* Size utilities */
  .w-6 { width: 1.5rem; }
  .w-64 { width: 16rem; }
  .h-6 { height: 1.5rem; }
  .h-full { height: 100%; }

  /* Fill utilities */
  .fill-current { fill: currentColor; }

  /* Animation utilities */
  .animate-spin {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Color utilities - expanded */
  .text-red-600 { color: #dc2626; }
  .text-red-700 { color: #b91c1c; }
  .text-blue-500 { color: #3b82f6; }
  .text-gray-500 { color: #6b7280; }
  .text-gray-900 { color: #111827; }
  .text-primary-600 { color: #2563eb; }
  .text-primary-700 { color: #1d4ed8; }
  .bg-white { background-color: #ffffff; }
  .bg-blue-100 { background-color: #dbeafe; }
  .bg-blue-200 { background-color: #bfdbfe; }
  .bg-gray-100 { background-color: #f3f4f6; }
  .bg-gray-200 { background-color: #e5e7eb; }
  .bg-primary-50 { background-color: #eff6ff; }
  .bg-primary-100 { background-color: #dbeafe; }
  .bg-red-50 { background-color: #fef2f2; }
  .border-red-200 { border-color: #fecaca; }
  .border-primary-200 { border-color: #bfdbfe; }
  .border-r { border-right-width: 1px; }
  .border-t-transparent { border-top-color: transparent; }

  /* Border width utilities */
  .border-2 { border-width: 2px; }

  /* Hover utilities - expanded */
  .hover\:bg-blue-200:hover { background-color: #bfdbfe; }
  .hover\:bg-gray-200:hover { background-color: #e5e7eb; }
  .hover\:text-primary-700:hover { color: #1d4ed8; }
  .hover\:shadow-md:hover { box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1); }

  /* Text alignment utilities */
  .text-center { text-align: center; }

  /* Margin/padding utilities - expanded */
  .ml-2 { margin-left: 0.5rem; }
  .mt-2 { margin-top: 0.5rem; }
  .px-2 { padding-left: 0.5rem; padding-right: 0.5rem; }
  .px-1\\.5 { padding-left: 0.375rem; padding-right: 0.375rem; }
  .py-0\\.5 { padding-top: 0.125rem; padding-bottom: 0.125rem; }
  .py-1 { padding-top: 0.25rem; padding-bottom: 0.25rem; }
  .py-2 { padding-top: 0.5rem; padding-bottom: 0.5rem; }

  /* Text size utilities - expanded */
  .text-xs { font-size: 0.75rem; line-height: 1rem; }

  /* Max-width utilities - expanded */
  .max-w-3xl { max-width: 48rem; }
  .max-w-6xl { max-width: 72rem; }

  /* Spacing utilities - expanded */
  .space-y-1 > * + * { margin-top: 0.25rem; }
  .space-y-8 > * + * { margin-top: 2rem; }

  /* Border utilities - expanded */
  .rounded-full { border-radius: 9999px; }

  /* Table utilities */
  table { border-collapse: collapse; }
  .w-full table { width: 100%; }
  td { vertical-align: top; }

  /* Responsive utilities */
  @media (min-width: 768px) {
    .md\:flex-row { flex-direction: row; }
    .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
</style>