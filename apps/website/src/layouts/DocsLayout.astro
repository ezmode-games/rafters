---
import BaseLayout from './BaseLayout.astro';
import DocsSidebar from '../components/DocsSidebar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Documentation - Rafters',
  description = 'AI-driven component library with embedded design intelligence',
} = Astro.props;
---

<BaseLayout title={title} description={description}>
	<div class="flex min-h-screen">
		<DocsSidebar />
		
		<main class="flex-1 flex flex-col">
			<div class="p-8 mx-auto w-full max-w-7xl">
				<Header title="Documentation" titleClasses="text-2xl font-medium mb-8" />
			</div>
			
			<div class="flex-1 px-8 pb-8 mx-auto w-full max-w-7xl">
				<article class="max-w-4xl font-sans text-lg leading-relaxed">
					<slot />
				</article>
			</div>

			<div class="px-8 mx-auto w-full max-w-7xl">
				<Footer />
			</div>
		</main>
	</div>
</BaseLayout>