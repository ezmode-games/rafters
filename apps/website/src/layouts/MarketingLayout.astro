---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  headerTitle?: string;
  headerTitleClasses?: string;
}

const {
  title = 'Rafters Design System',
  description = 'AI-driven component library with embedded design intelligence',
  headerTitle = 'Rafters',
  headerTitleClasses = 'text-4xl leading-3 tracking-wide',
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  <main class="mx-auto w-7xl flex min-h-screen flex-col items-center justify-center gap-8 p-4">
    <Header title={headerTitle} titleClasses={headerTitleClasses} />

    <article class="max-w-4xl font-sans text-lg leading-relaxed">
      <slot />
    </article>

    <Footer />
  </main>
</BaseLayout>