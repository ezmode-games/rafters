{
  "name": "website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "node scripts/generate-token-cache.mjs && astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "deploy": "node scripts/generate-token-cache.mjs && astro build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "generate-tokens": "node scripts/generate-token-cache.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:spec": "vitest run --config vitest.config.ts --grep spec",
    "test:component": "playwright test --config=playwright-ct.config.ts",
    "test:e2e": "playwright test",
    "test:preflight": "vitest run && playwright test --config=playwright-ct.config.ts --reporter=json && playwright test --reporter=json"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.8",
    "@astrojs/mdx": "^4.3.2",
    "@astrojs/react": "^4.3.1",
    "@rafters/design-tokens": "workspace:*",
    "astro": "^5.13.7",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "vitest": "catalog:",
    "wrangler": "^4.35.0"
  }
}
