{
  "name": "website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "node scripts/generate-token-cache.mjs && pnpm run generate-globals && pnpm run compile-css && astro build",
    "generate-globals": "tsx ../../packages/design-tokens/scripts/generate-globals-css.ts > src/data/globals.css",
    "compile-css": "tailwindcss -i src/data/globals.css -o public/globals.css --content \"$(realpath ../../packages/ui/src)/**/*.{ts,tsx}\"",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "deploy": "node scripts/generate-token-cache.mjs && astro build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "generate-tokens": "node scripts/generate-token-cache.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "echo 'No integration tests - see issues #337-#342 for testing infrastructure'",
    "test:integration:watch": "echo 'No integration tests - see issues #337-#342 for testing infrastructure'",
    "test:spec": "vitest run --config vitest.config.ts --grep spec",
    "test:component": "echo 'No component tests for website'",
    "test:e2e": "playwright test",
    "test:preflight": "vitest run"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.8",
    "@astrojs/mdx": "^4.3.2",
    "@astrojs/react": "^4.3.1",
    "@rafters/design-tokens": "workspace:*",
    "@rafters/shared": "workspace:*",
    "@rafters/ui": "workspace:*",
    "@swc/core": "^1.10.5",
    "astro": "^5.13.7",
    "comment-parser": "^1.4.1",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/vite": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "^4.1.14",
    "vite": "catalog:",
    "vitest": "catalog:",
    "wrangler": "^4.35.0"
  }
}
