{
  "name": "@rafters/registry",
  "version": "0.2.0",
  "description": "Component registry API for Rafters AI design intelligence system",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typegen": "wrangler types",
    "deploy": "wrangler deploy --minify",
    "deploy:preview": "wrangler deploy --minify --preview",
    "deploy:build": "wrangler deploy --dry-run"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@rafters/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^3.2.3",
    "wrangler": "^4.26.0"
  },
  "keywords": ["rafters", "ai", "design-system", "component-registry", "cloudflare-workers", "hono"]
}
