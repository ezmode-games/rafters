{
  "name": "api",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "echo 'Cloudflare Workers app - no build step required' && mkdir -p dist && echo 'workers-ready' > dist/.ready",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:preflight": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@hono/zod-validator": "^0.7.2",
    "@rafters/color-utils": "workspace:^",
    "@rafters/shared": "workspace:^",
    "hono": "^4.9.6",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.68",
    "vitest": "catalog:",
    "wrangler": "^4.34.0"
  },
  "turbo": {
    "build": {
      "outputs": ["dist/**"]
    }
  }
}
