---
/**
 * UsagePatterns - DO/NEVER guidelines display
 * Shows usage guidelines from component intelligence
 */

interface Props {
  dos: string[];
  nevers: string[];
  class?: string;
}

const { dos = [], nevers = [], class: className = '' } = Astro.props;
---

<div class={`flex flex-col gap-4 ${className}`}>
  {dos.length > 0 && (
    <div class="p-4 bg-card border border-border">
      <h4 class="flex items-center gap-2 font-mono text-xs font-medium tracking-widest uppercase text-success m-0 mb-3">
        <span class="flex items-center justify-center w-4 h-4 border border-current text-xs font-semibold" aria-hidden="true">+</span>
        Do
      </h4>
      <ul class="list-none p-0 m-0 flex flex-col gap-2">
        {dos.map((item) => (
          <li class="text-sm leading-relaxed text-muted-foreground pl-3">{item}</li>
        ))}
      </ul>
    </div>
  )}

  {nevers.length > 0 && (
    <div class="p-4 bg-card border border-border">
      <h4 class="flex items-center gap-2 font-mono text-xs font-medium tracking-widest uppercase text-destructive m-0 mb-3">
        <span class="flex items-center justify-center w-4 h-4 border border-current text-xs font-semibold" aria-hidden="true">-</span>
        Never
      </h4>
      <ul class="list-none p-0 m-0 flex flex-col gap-2">
        {nevers.map((item) => (
          <li class="text-sm leading-relaxed text-muted-foreground pl-3">{item}</li>
        ))}
      </ul>
    </div>
  )}

  {dos.length === 0 && nevers.length === 0 && (
    <p class="text-sm text-muted-foreground/50 italic m-0">No usage patterns documented</p>
  )}
</div>
