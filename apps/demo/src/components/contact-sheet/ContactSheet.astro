---
/**
 * ContactSheet - Full component page with blueprint layout
 * Shows component specimens, intelligence, and code examples
 */

import type { ComponentMetadata } from '../../lib/types';
import DimensionMarker from '../blueprint/DimensionMarker.astro';
import GridOverlay from '../blueprint/GridOverlay.astro';
import SectionDivider from '../blueprint/SectionDivider.astro';
import TechnicalNote from '../blueprint/TechnicalNote.astro';
import IntelligencePanel from '../intelligence/IntelligencePanel.astro';

interface Props {
  component: ComponentMetadata;
  hasVariantsDemo?: boolean;
  hasSizesDemo?: boolean;
}

const { component, hasVariantsDemo = false, hasSizesDemo = false } = Astro.props;
---

<article class="flex flex-col gap-6">
  <!-- Sheet Header -->
  <header class="pb-6 border-b border-border">
    <div class="flex justify-between items-start flex-wrap gap-4 mb-4">
      <div class="flex flex-col gap-1">
        <span class="font-mono text-xs tracking-widest uppercase text-primary">
          {component.category}
        </span>
        <h1 class="font-mono text-3xl font-medium tracking-wider text-foreground m-0">
          {component.displayName}
        </h1>
      </div>
      <div class="flex flex-wrap gap-2">
        <TechnicalNote
          label="Cognitive Load"
          value={`${component.intelligence.cognitiveLoad.score}/10`}
        />
        <TechnicalNote
          label="Variants"
          value={component.variants.length.toString()}
        />
        <TechnicalNote
          label="Dependencies"
          value={component.dependencies.length.toString()}
        />
      </div>
    </div>
    <p class="text-base leading-relaxed text-muted-foreground m-0 max-w-prose">
      {component.description || component.intelligence.cognitiveLoad.description}
    </p>
  </header>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main content area -->
    <div class="lg:col-span-2 flex flex-col gap-6">
      <!-- Specimen Area -->
      <section class="flex flex-col gap-4">
        <DimensionMarker label="Component Specimens" />

        <div class="relative p-6 bg-muted/30 border border-border min-h-48">
          <GridOverlay density="fine" />

          <!-- Primary specimen -->
          <div class="relative z-10 bg-card border-2 border-primary p-6 shadow-lg">
            <div class="absolute -top-3 left-4 font-mono text-xs tracking-widest uppercase text-primary-foreground bg-primary px-2 py-0.5">
              Default State
            </div>
            <div class="flex items-center justify-center min-h-20">
              <slot name="demo">
                <p class="text-sm text-muted-foreground italic">Component demo will render here</p>
              </slot>
            </div>
          </div>

          <!-- Variants demo -->
          {hasVariantsDemo && (
            <div class="mt-6">
              <h3 class="font-mono text-xs font-medium tracking-widest uppercase text-foreground m-0 mb-4">
                Variants
              </h3>
              <div class="bg-card border border-border p-4">
                <slot name="variants" />
              </div>
            </div>
          )}

          <!-- Sizes demo -->
          {hasSizesDemo && (
            <div class="mt-6">
              <h3 class="font-mono text-xs font-medium tracking-widest uppercase text-foreground m-0 mb-4">
                Sizes
              </h3>
              <div class="bg-card border border-border p-4">
                <slot name="sizes" />
              </div>
            </div>
          )}
        </div>
      </section>

      <SectionDivider label="Code Example" />

      <!-- Code Example -->
      <section class="mt-4">
        {component.intelligence.example ? (
          <pre class="font-mono text-xs leading-relaxed bg-background border border-border p-4 m-0 overflow-x-auto text-foreground"><code>{component.intelligence.example}</code></pre>
        ) : (
          <p class="text-sm text-muted-foreground/50 italic m-0">No code example available</p>
        )}
      </section>

      <!-- File path -->
      <div class="mt-4">
        <TechnicalNote label="Source" value={component.filePath} icon="info" />
      </div>
    </div>

    <!-- Intelligence Panel Sidebar -->
    <aside class="lg:sticky lg:top-24 lg:self-start">
      <IntelligencePanel intelligence={component.intelligence} />
    </aside>
  </div>
</article>
