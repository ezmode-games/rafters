---
/**
 * SectionDivider - Blueprint section separator
 * Creates visual separation between content sections
 */

interface Props {
  label?: string;
  class?: string;
}

const { label, class: className = '' } = Astro.props;
---

<div class={`flex items-center gap-4 my-8 ${className}`} role="separator">
  <div class="flex-1 h-px bg-gradient-to-r from-transparent via-border/50 to-border/50" aria-hidden="true"></div>
  {label && <span class="font-mono text-xs tracking-widest uppercase text-muted-foreground/50 px-2">{label}</span>}
  <div class="flex-1 h-px bg-gradient-to-r from-border/50 via-border/50 to-transparent" aria-hidden="true"></div>
</div>
