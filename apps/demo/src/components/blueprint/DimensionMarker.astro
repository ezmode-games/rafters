---
/**
 * DimensionMarker - Technical annotation with measurement lines
 * Used for labeling and dimension callouts in blueprint style
 */

interface Props {
  label: string;
  value?: string;
  class?: string;
}

const { label, value, class: className = '' } = Astro.props;
---

<div class={`flex items-center gap-1 w-full font-mono text-xs tracking-wider uppercase text-border ${className}`}>
  <span class="flex-1 h-px bg-gradient-to-r from-transparent via-border/30 to-transparent" aria-hidden="true"></span>
  <span class="flex items-center gap-1 px-2 whitespace-nowrap">
    <span class="text-muted-foreground">{label}</span>
    {value && <span class="text-primary">{value}</span>}
  </span>
  <span class="flex-1 h-px bg-gradient-to-r from-transparent via-border/30 to-transparent" aria-hidden="true"></span>
</div>
