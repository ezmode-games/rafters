---
/**
 * TechnicalNote - Construction note annotation
 * Used for callouts and technical documentation in blueprint style
 */

interface Props {
  label: string;
  value?: string;
  icon?: 'info' | 'warning' | 'check' | 'x';
  class?: string;
}

const { label, value, icon, class: className = '' } = Astro.props;

const iconPaths: Record<string, string> = {
  info: 'M12 16v-4m0-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  warning:
    'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  check: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  x: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<div class={`inline-flex items-center gap-1 font-mono text-xs tracking-wider uppercase text-muted-foreground px-2 py-1 bg-muted/50 border border-border ${className}`}>
  {icon && (
    <svg
      class="w-3 h-3 text-primary"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[icon]} />
    </svg>
  )}
  <span class="text-muted-foreground">{label}</span>
  {value && (
    <>
      <span class="text-border" aria-hidden="true">:</span>
      <span class="text-primary">{value}</span>
    </>
  )}
</div>
