{
  "name": "@rafters/ui",
  "version": "0.1.1",
  "description": "AI-first design intelligence components for React",
  "type": "module",
  "private": false,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:integration": "echo \"UI package uses unit tests only - no Cloudflare Workers integration needed\"",
    "test:component": "playwright test --config playwright.config.component.ts --pass-with-no-tests",
    "test:preflight": "vitest run --passWithNoTests && playwright test --config playwright.config.component.ts --pass-with-no-tests",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@cloudflare/vitest-pool-workers": "catalog:",
    "@playwright/experimental-ct-react": "^1.42.0",
    "@playwright/test": "^1.42.0",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "comment-parser": "^1.4.0",
    "jsdom": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@rafters/design-tokens": "workspace:*",
    "@rafters/shared": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "catalog:",
