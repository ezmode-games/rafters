{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["src/components/**/*", "src/lib/**/*"],
  "exclude": [
    "src/stories/**/*",
    "src/app/**/*",
    "src/main.tsx",
    "src/test-setup.ts",
    "**/*.stories.*",
    "**/*.test.*",
    "dist",
    "node_modules"
  ]
}
