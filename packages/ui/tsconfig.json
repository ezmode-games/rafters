{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@rafters/core": ["./packages/core/src"],
      "@rafters/core/*": ["./packages/core/src/*"],
      "@rafters/cli": ["./packages/cli/src"],
      "@rafters/cli/*": ["./packages/cli/src/*"],
      "@rafters/mcp-server": ["./packages/mcp-server/src"],
      "@rafters/mcp-server/*": ["./packages/mcp-server/src/*"]
    }
  }
}
