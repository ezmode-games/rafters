{
  "name": "@rafters/shared",
  "version": "1.0.0",
  "description": "Shared types, schemas, and utilities for the Rafters AI design intelligence system",
  "type": "module",
  "private": false,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "development": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "watch": "unbuild --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:preflight": "vitest run",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/react": "catalog:",
    "typescript": "catalog:",
    "unbuild": "^3.6.1",
    "vitest": "catalog:"
  },
  "dependencies": {
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "packages/shared"
  }
}
