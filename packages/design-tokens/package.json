{
  "name": "@rafters/design-tokens",
  "version": "1.0.0",
  "description": "Generated design systems and semantic tokens for Rafters AI intelligence system",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dist": {
    "directory": "dist",
    "format": "esm"
  },
  "files": ["dist", "tokens", "README.md"],
  "main": "./dist/index.js",
  "types": "./dist/index.d.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:preflight": "vitest run --passWithNoTests",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/fs-extra": "catalog:",
    "@types/node": "catalog:",
    "tsup": "^8.5.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@rafters/color-utils": "workspace:*",
    "@rafters/shared": "workspace:*",
    "fs-extra": "catalog:",
    "sqids": "catalog:",
    "zod": "catalog:"
  },
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "packages/design-tokens"
  }
}
