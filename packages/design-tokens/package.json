{
  "name": "@rafters/design-tokens",
  "version": "1.0.2",
  "description": "Generated design systems and semantic tokens for Rafters AI intelligence system",
  "type": "module",
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "development": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:preflight": "vitest run",
    "lint": "biome check --fix --unsafe",
    "typecheck": "tsc --noEmit",
    "validate-standards": "tsx scripts/validate-standards.ts"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.1",
    "glob": "^11.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@rafters/shared": "workspace:*",
    "fs-extra": "^11.2.0",
    "jszip": "^3.10.1",
    "sqids": "^0.3.0",
    "zod": "catalog:"
  },
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "packages/design-tokens"
  }
}
