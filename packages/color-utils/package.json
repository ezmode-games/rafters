{
  "name": "@rafters/color-utils",
  "version": "0.2.0",
  "description": "OKLCH color utilities, accessibility calculations, and color vision simulation for Rafters",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@types/chroma-js": "^2.4.4"
  },
  "dependencies": {
    "@rafters/shared": "workspace:*",
    "colorjs.io": "^0.5.2",
    "apca-w3": "^0.1.9",
    "chroma-js": "^2.6.0"
  },
  "author": "Sean Silvius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/real-handy/rafters",
    "directory": "packages/color-utils"
  }
}
