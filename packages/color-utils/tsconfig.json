{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "typeRoots": ["./types", "../../node_modules/@types"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "references": [{ "path": "../shared" }]
}
