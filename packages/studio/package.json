{
  "name": "@rafters/studio",
  "version": "0.1.0",
  "description": "Rafters Studio - meditative design system generator that transforms single colors into complete AI-intelligible design systems",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest run --passWithNoTests",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.1",
    "@tailwindcss/vite": "^4.1.8",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^3.2.3",
    "tailwindcss": "^4.1.8"
  },
  "dependencies": {
    "@rafters/shared": "workspace:*",
    "@rafters/color-utils": "workspace:*",
    "@rafters/design-tokens": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "framer-motion": "^11.13.5",
    "react-colorful": "^5.6.1",
    "clsx": "^2.1.1"
  }
